{
  "name": "@brightideas/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "nodemon --watch src --watch .env --ext ts --exit-child --exec \"node -r esbuild-register src/index.ts\"",
    "build": "rimraf ./dist && tsc --build ./tsconfig.json",
    "start": "node ./dist/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint  --cache --cache-location ./node_modules/.cache/.eslintcache .",
    "prettify": "prettier --log-level warn --cache --write \"{src/**/*.{ts,tsx,js,json,yml,scss},!**/{node_modules,dist}/**/*}\"",
    "prepare": "pnpm pgc"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.7",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "esbuild": "^0.24.2",
    "esbuild-register": "^3.6.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.2.1"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@trpc/server": "^10.45.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "superjson": "^2.2.2",
    "zod": "^3.24.1"
  }
}
