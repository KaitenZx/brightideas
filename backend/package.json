{
  "name": "@brightideas/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "nodemon --watch src --watch src/emails/dist --watch .env --ext ts --exit-child --exec \"node -r esbuild-register src/index.ts\"",
    "test": "jest",
    "build-emails": "rimraf ./src/emails/dist && mkdir ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "sentry-release": "dotenv -- bash -c 'sentry-cli releases new ${SOURCE_VERSION} --finalize --org brightideas --project backend --auth-token ${SENTRY_AUTH_TOKEN}'",
    "sentry-sourcemaps": "dotenv -- bash -c 'sentry-cli releases files ${SOURCE_VERSION} upload-sourcemaps ./dist --org brightideas --project backend'",
    "sentry": "pnpm sentry-release && pnpm sentry-sourcemaps",
    "start": "node ./dist/backend/src/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint  --cache --cache-location ./node_modules/.cache/.eslintcache .",
    "prettify": "prettier --log-level warn --cache --write \"{src/**/*.{ts,tsx,js,json,yml,scss},!**/{node_modules,dist}/**/*}\"",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "devDependencies": {
    "@brightideas/webapp": "workspace:*",
    "@sentry/cli": "^2.42.1",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.7",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/triple-beam": "^1.3.5",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.24.2",
    "esbuild-register": "^3.6.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.2.1"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@sentry/node": "^9.1.0",
    "@trpc/server": "^10.45.2",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "date-fns": "^4.1.0",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "react-router-dom": "^6.28.2",
    "serialize-error": "8.1.0",
    "superjson": "^2.2.2",
    "triple-beam": "^1.4.1",
    "winston": "^3.17.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  }
}
