{
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "esm": true, // <--- Говорим ts-node использовать ESM режим
    "experimentalResolver": true
  },
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "resolveJsonModule": true,
    "inlineSources": true,
    "isolatedModules": false,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022"
  },
  "references": [{ "path": "../shared" }],
  "include": ["src"],
  "exclude": ["dist", "**/*.tsbuildinfo"]
}
