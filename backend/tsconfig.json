{
  "ts-node": {
    "files": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "paths": {
      "@brightideas/webapp/*": ["../webapp/*"],
      "@brightideas/shared/*": ["../shared/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "resolveJsonModule": true,
    "inlineSources": true,
    "isolatedModules": false,
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2021"
  },
  "references": [{ "path": "../shared" }],
  "include": ["src"],
  "exclude": ["dist", "**/*.tsbuildinfo"]
}
