{
  "name": "brightideas",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @brightideas/backend",
    "w": "pnpm --filter @brightideas/webapp",
    "sh": "pnpm --filter @brightideas/shared",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "types": "concurrently 'pnpm b types' 'pnpm w types' 'pnpm sh types'",
    "lint": "concurrently 'pnpm b lint' 'pnpm w lint' 'pnpm sh lint'",
    "prettify": "pnpm -r --parallel prettify",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/parser": "^8.24.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.20.1",
    "eslint-config-love": "^117.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "ts-patch": "^3.3.0",
    "typescript": "^5.7.3",
    "typescript-transform-paths": "^3.5.3"
  }
}
